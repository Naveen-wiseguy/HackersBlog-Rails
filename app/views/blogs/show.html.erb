<h1><%= @blog.name %> </h1>
<% @articles.each do |article| %>
  <div class="article">
  <div class="title"><%= link_to article.title,article %> </div>
  <div class="subtext"> Published : <%= time_ago_in_words(article.published) unless article.published.blank? %> ago | <%= article.views %> views
  </div>
</div>
<% end %>
